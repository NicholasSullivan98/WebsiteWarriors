@model AppointmentInfo
@{
    ViewData["Title"] = "Edit Appointment";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        * {
            box-sizing: border-box;
        }

        input[type=text], select, textarea, [type=date], [type=time] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: vertical;
        }

        label {
            padding: 12px 12px 12px 0;
            display: inline-block;
        }

        input[type=submit] {
            background-color: #04AA6D;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            float: right;
        }

            input[type=submit]:hover {
                background-color: #3fe86c;
            }

        .pageContainer {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
        }

        .col-25 {
            float: left;
            width: 25%;
            margin-top: 6px;
        }

        .col-75 {
            float: left;
            width: 75%;
            margin-top: 6px;
        }
    </style>
</head>
<body>

    <div>
        <div>
            <table border="1" width="100%">
                <tr>
                    <td style="padding: 10px;">
                        <a><img src="/img/Logo_Cropped.jpg" style="width: 300px; height: 125px;" /></a>
                    </td>
                    <td style="padding: 10px;">
                        <h1>Edit Appointment</h1>
                    </td>
                </tr>
            </table>
        </div><br>
        <div>
            <table border="1" width="100%">
                <tr>
                    <td style="padding: 10px;">
                        <div class="pageContainer">
                            <form method="post" asp-action="EditAppointment" asp-route-id="@Model.AppointmentID">
                                <div asp-validation-summary="All">
                                    <div class="row">
                                        <div class="col-25">
                                            <label asp-for="Name">Name</label>
                                        </div>
                                        <div class="col-75">
                                            <input type="text" asp-for="Name" name="Name" value="@Model.Name">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-25">
                                            <label asp-for="PhoneNumber">PhoneNumber</label>
                                        </div>
                                        <div class="col-75">
                                            <input type="text" asp-for="PhoneNumber" name="phonenumber" value="@Model.PhoneNumber">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-25">
                                            <label asp-for="CourseLevel">Course Level</label>
                                        </div>
                                        <div class="col-75">
                                            <select asp-for="CourseLevel">
                                                <option value="Beginner">Beginner</option>
                                                <option value="Intermediate">Intermediate</option>
                                                <option value="Advanced">Advanced</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-25">
                                            <label asp-for="Date">Date: </label>
                                        </div>
                                        <div class="col-75">
                                            <input type="text" asp-for="Date" type="date" value="@Model.Date"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-25"></div>
                                        <div class="col-75">
                                            <p style="align-self:center">Current Appointment Date: @Model.Date.ToLongDateString()</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-25">
                                            <label asp-for="Time">Time: </label>
                                        </div>
                                        <div class="col-75">
                                            <input asp-for="Time" type="time" value="@Model.Time"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-25"></div>
                                        <div class="col-75">
                                            <p style="align-self:center">Current Appointment Time: @Model.Time.ToLongTimeString()</p>
                                        </div>
                                    </div><br>
                                    <div class="row">
                                        <input type="submit" value="Save Appointment">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div style="color: red;">@ViewBag.UpdateError</div>
    </div>
</body>
</html>

