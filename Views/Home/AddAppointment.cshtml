@model AddAppointPageModel
@{
    ViewData["Title"] = "Add Appointment";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
<style>
    * {
      box-sizing: border-box;
    }

    input[type=text], select, textarea, [type=date], [type=time] {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 4px;
      resize: vertical;
    }

    label {
      padding: 12px 12px 12px 0;
      display: inline-block;
    }

    input[type=submit] {
      background-color: #04AA6D;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      float: right;
    }

    input[type=submit]:hover {
        background-color: #3fe86c;
    }

    .pageContainer {
      border-radius: 5px;
      background-color: #f2f2f2;
      padding: 20px;
    }

    .col-25 {
      float: left;
      width: 25%;
      margin-top: 6px;
    }

    .col-75 {
      float: left;
      width: 75%;
      margin-top: 6px;
    }
</style>
</head>
<body>

<div>
    <div>
        <table border="1" width="100%">
            <tr>
                <td style="padding: 10px;">
                    <a><img src="/img/Logo_Cropped.jpg" style="width: 300px; height: 125px;"/></a>
                </td>
                <td style="padding: 10px;">
                    <h1>Book Appointment</h1>
                </td>
                <td style="padding: 10px;">
                    <h5>Personal Profile</h5>
                </td>
            </tr>
        </table>
    </div><br>
    <div>
        <table border="1" width="100%">
            <tr>
                <td style="padding: 10px;">
                    <div class="pageContainer">
                        <form method="post" asp-action="AddAppointment">
                            <div asp-validation-summary="All">
                                <div class="row">
                                    <div class="col-25">
                                        <label asp-for="Appointment.Name">Child Name</label>
                                    </div>
                                    <div class="col-75">
                                        <select>
                                        @foreach (CapstoneProject.Models.Account_Models.StudentInformation student in Model.Students)
                                        {
                                            @if (student.ParentAccountID == Model.Accounts.AccountID)
                                            {
                                                <option value="@student.StudentFirstName + @student.StudentLastName">@student.StudentFirstName @student.StudentLastName</option>
                                            }
                                        }
                                        </select>
                                    </div>
                                </div>
                                <!--
                                <div class="row">
                                    <div class="col-25">
                                        <label asp-for="PhoneNumber">PhoneNumber</label>
                                    </div>
                                    <div class="col-75">
                                        <input type="text" asp-for="PhoneNumber" name="phonenumber" placeholder="Enter your Phone Num..">
                                    </div>
                                </div>
                                -->
                                <div class="row">
                                    <div class="col-25">
                                        <label asp-for="Appointment.CourseLevel">Course Level</label>
                                    </div>
                                    <div class="col-75">
                                        <select asp-for="Appointment.CourseLevel">
                                            <option value="Beginner">Beginner</option>
                                            <option value="Intermediate">Intermediate</option>
                                            <option value="Advanced">Advanced</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-25">
                                            <label asp-for="Appointment.Date">Date: </label>
                                    </div>
                                    <div class="col-75">
                                            <input type="text" asp-for="Appointment.Date" type="date" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-25">
                                            <label asp-for="Appointment.Time">Time: </label>
                                    </div>
                                    <div class="col-75">
                                            <input asp-for="Appointment.Time" type="time" />
                                    </div>
                                </div><br>
                                <div class="row">
                                    <input type="submit" value="Book Appointment">
                                </div>
                                <!--<input type="text" hidden asp-for="Name" name="Name" value="@ViewBag.Name" placeholder="Enter your name..">-->
                                <input type="text" hidden asp-for="Appointment.PhoneNumber" name="phonenumber" value="@ViewBag.PhoneNumber" placeholder="Enter your Phone Num..">
                                <input type="text" hidden asp-for="Appointment.Email" name="email" value="@ViewBag.Email">
                                <input type="text" hidden asp-for="Appointment.ParentName" name="parentname" value="@ViewBag.Name">
                            </div>
                        </form>
                    </div>
                </td>    
            </tr>
            <tr>
                <td style="text-align: center;">
                    <a href="https://www.instagram.com/madebymesewingstudio/">Instagram</a>
                    <a href="https://www.facebook.com/">Facebook</a>
                </td>
            </tr>
        </table>
    </div>
    <div style="color: springgreen;">@ViewBag.Response</div>
    <div style="color: red;">@ViewBag.Error</div>
    <p>
        <a asp-action="Index">Click here</a> to go back.
    </p>
</div>
</body>
</html>
